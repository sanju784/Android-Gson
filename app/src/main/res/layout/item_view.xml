<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/card_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/steve"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steve Jobs"
            android:layout_alignTop="@+id/card_img"
            android:layout_toRightOf="@+id/card_img"
            android:layout_toEndOf="@+id/card_img"
            android:layout_marginLeft="90dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="14dp" />

        <TextView
            android:id="@+id/card_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/card_name"
            android:layout_alignStart="@+id/card_name"
            android:layout_below="@+id/card_name"
            android:layout_marginTop="16dp"
            android:text="steve.jobs@apple.com" />
    </RelativeLayout>
</android.support.v7.widget.CardView>